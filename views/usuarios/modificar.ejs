<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>

<div class="container mt-3">
    <form action="/editarUsuario" method="post">
        <div class="card">
            <div class="card-header"></div>
            <h1>Editar Usuario</h1>
            <div class="card-body"></div>
            <input  type="hidden" name="id" id="id" value="<%= user.id %>">
            <input type="hidden" name="fotoAnterior" id="fotoAnterior" value="<%= user.foto %>">
            <input class="form-control mb-3" type="text" value="<%= user.nombre %>" name="nombre" id="nombre" placeholder="Nombre" >
            <input class="form-control mb-3" type="text" value="<%= user.usuario %>"  name="usuario" id="Usuario" placeholder="Usuario" >
            <input class="form-control mb-3" type="text"  name="password" id="password" placeholder="Nuevo password o dejarlo en blanco para conservar el anterio" >
            <input class="form-control mb-3" type="file" name="foto" id="foto" placeholder="Selelcciona tu foto">
            <div class="card-footer">
                <button class="btn btn-primary mb-3" type="submit">Editar usuario</button>
                <button class="btn btn-secondary mb-3" type="reset">Limpiar campos</button>
            </div>
        </div>
    </form>
</div>

<%- include("../templates/pie") %></form>