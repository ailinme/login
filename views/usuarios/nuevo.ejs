<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>

<div class="container mt-5">
    <form action="/nuevousuario" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header"></div>
            <h1>Nuevo Usuario</h1>
            <div class="card-body"></div>
            <input class="form-control mb-3" type="text" name="nombre" id="nombre" placeholder="Nombre" autofocus>
            <input class="form-control mb-3" type="text" name="usuario" id="usuario" placeholder="Usuario" >
            <input class="form-control mb-3" type="text" name="password" id="password" placeholder="Password" >
            <input class="form-control mb-3" type="file" name="foto" id="foto" placeholder="Selelcciona tu foto">
            <div class="card-footer">
                <button class="btn btn-primary mb-3" type="submit">Guardar usuario</button>
                <button class="btn btn-secondary mb-3" type="reset">Limpiar campos</button>
            </div>
        </div>
    </form>
</div>

